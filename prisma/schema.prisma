generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tender trouv√© lors d'une recherche
model Tender {
  id              String    @id @default(cuid())
  title           String
  link            String    @unique
  reference       String?
  contractName    String?
  publicationDate String?
  deadline        String?
  buyer           String?
  description     String?   @db.Text
  budget          String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([reference])
  @@index([deadline])
  @@map("tenders")
}

